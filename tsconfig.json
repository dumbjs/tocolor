{
	"include": ["src"],
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"target": "es6",
		"outDir": "dist",
		"downlevelIteration": true,
		"lib": ["dom", "esnext"],
		"declaration": true,
		"sourceMap": true,
		"esModuleInterop": true
	}
}

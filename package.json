{
	"name": "@barelyhuman/tocolor",
	"version": "0.1.0",
	"keywords": [
		"color",
		"conversion",
		"rgb to hex",
		"hex to rgb",
		"hsl to rgb",
		"tiny"
	],
	"files": [
		"esm",
		"dist",
		"src"
	],
	"repository": "git@github.com:barelyhuman/tocolor.git",
	"license": "MIT",
	"author": "Reaper <ahoy@barelyhuman.dev> (https://reaper.im)",
	"main": "./dist/index.js",
	"module": "./esm/index.js",
	"scripts": {
		"prebuild": "rimraf dist esm",
		"build": "concurrently 'npm:build:*'",
		"build:cjs": "tsc --module commonjs --outDir dist",
		"build:esm": "tsc --module esnext --outDir esm",
		"postbuild": "concurrently 'npm:minify:*'",
		"minify:cjs": "esbuild dist/index.js --minify --bundle --outfile=dist/index.min.js",
		"minify:esm": "esbuild esm/index.js --minify --bundle --outfile=esm/index.min.js",
		"fix": "prettier --write .",
		"size": "sizesnap",
		"test": "uvu -r tsm tests"
	},
	"prettier": "@barelyhuman/prettier-config",
	"devDependencies": {
		"@barelyhuman/prettier-config": "^0.1.0",
		"concurrently": "^7.6.0",
		"esbuild": "^0.16.12",
		"prettier": "^2.5.1",
		"rimraf": "^3.0.2",
		"sizesnap": "^0.1.0",
		"tsm": "^2.2.1",
		"typescript": "^4.5.5",
		"uvu": "^0.5.1"
	},
	"publishConfig": {
		"access": "public"
	},
	"sizesnap": {
		"files": [
			"./dist/**/*",
			"./esm/**/*"
		]
	}
}
